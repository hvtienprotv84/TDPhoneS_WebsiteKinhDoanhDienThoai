@model TDPhoneS.Models.ViewModels.LoginViewModel

@{
    Layout = "";
}

<!doctype html>
<html lang="en">

<head>
    <title>Login Control Panel</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="shortcut icon" href="~/assets/images/logo_tdphones.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet"
          href="~/Admin/dist/fonts/fonts.googleapis.com_css_family=Source+Sans+Pro_300,400,400i,700&display=fallback.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Admin/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/Admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Admin/dist/css/adminlte.css">
</head>

<body style="background-image: url(https://png.pngtree.com/thumb_back/fh260/background/20220522/pngtree-server-farm-banner-system-administration-image_1374995.jpg); background-size: contain;">
    <img style="position: absolute; width: 500px; top: 380px; left: 50px;" src="~/assets/images/logo_tdphones.png"/>
    <p style="position: absolute; font-size: 110px; font-weight:bold ; top: 40px; left: 40px; color: red;">TDPhoneS</p>
    <div class="container">
        <div class="card mt-5" style="width: 400px; margin: 0 auto;">
            <div class="card-body login-card-body">

                <p class="login-box-msg" style="font-size: 25px; font-weight: bold; color:black;">Đăng Nhập Với Vai Trò Admin</p>

                <form asp-area="Admin" asp-controller="Logging" asp-action="Login" method="post" >
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input name="returnUrl" value="@ViewBag.returnUrl" type="hidden" />

                    <div class="input-group mb-3">
                        <input asp-for="Username" style="height: 40px; font-size: 18px;" class="form-control" placeholder="Username">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Username" id="username_err" class="text-danger"></span>



                    <div class="input-group mb-3">
                        <input asp-for="Password" style="height: 40px; font-size: 18px;" class="form-control" placeholder="Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>

                    </div>
                    <span asp-validation-for="Password" id="username_err" class="text-danger"></span>

                    <div class="row">
                        <div class="col-8">
                            
                        </div>  
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" style="font-size: 20px;" class="btn btn-primary btn-block">Đăng Nhập</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

                <p class="mb-1">
                    <a href="forgot-password.html" style="font-size: 20px;">Quên Mật Khẩu</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>

<style>
        ::placeholder{
            font-size: 18px;
        }
</style>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="~/Admin/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Admin/dist/js/adminlte.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
            integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous">
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous">
    </script>

    @await Component.InvokeAsync("NToastNotify")
    @await Component.InvokeAsync("Notyf")
</body>

</html>
