@model TDPhoneS.Models.DataModels.User

@{
    ViewData["Title"] = "Xoá Người Dùng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3>Bạn Có Chắc Chắn Muốn Xóa Người Dùng Này?</h3>
<hr />
<div>
    <h4>Người Dùng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Họ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            Tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Số Điện Thoại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            Địa Chỉ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            Ảnh Đại Diện
        </dt>
        <dd class="col-sm-10">
            <img class="card-img" style="width: 80px;" width="250px" src="~/Uploads/user/@Model.Avatar"
                 onerror="this.onerror=null; this.src='/Uploads/user/default.png';" />
        </dd>
        <dt class="col-sm-2">
            Ngày Tạo
        </dt>
        <dd class="col-sm-10">
            @(Model.Created_Date != null ? Model.Created_Date.Value.ToString("dd / MM / yyyy hh:mm:ss") : "Null")
        </dd>
        <dt class="col-sm-2">
            Ngày Cập Nhật
        </dt>
        <dd class="col-sm-10">
            @(Model.Updated_Date != null ? Model.Updated_Date.Value.ToString("dd / MM / yyyy hh:mm:ss") : "Null")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xoá Người Dùng" class="btn btn-outline-danger rounded-0" /> |
        <a asp-action="Index" class="btn btn-outline-secondary rounded-0">Trở Về Trang Danh Sách Người Dùng</a>
    </form>
</div>
