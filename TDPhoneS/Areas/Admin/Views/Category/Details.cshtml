@model TDPhoneS.Models.DataModels.Category

@{
    ViewData["Title"] = "Chi Tiết Danh Mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div>
    <h4>Chi Tiết Danh Mục Của: @Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <p>Tên Danh Mục</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            <p>Hình Ảnh Dang Mục</p>
        </dt>
        <dd class="col-sm-10">
            <img style="width:80px" class="card-img" width="80px" src="~/Uploads/category/@Model.Image" />
        </dd>
        <dt class = "col-sm-2">
            <p>Trạng Thái</p>
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Status == 1)
            {
                <span class="badge badge-success">Show</span>
            }
            else
            {
                <span class="badge badge-danger">Hide</span>

            }
        </dd>
        <dt class = "col-sm-2">
            <p>Ngày Tạo</p>
        </dt>
        <dd class = "col-sm-10">
            @(Model.Created_Date != null ? Model.Created_Date.Value.ToString("dd / MM / yyyy hh:mm:ss") : "Null")
        </dd>
        <dt class = "col-sm-2">
            <p>Ngày Cập Nhật</p>
        </dt>
        <dd class = "col-sm-10">
            @(Model.Updated_Date != null ? Model.Updated_Date.Value.ToString("dd / MM / yyyy hh:mm:ss") : "Null")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-success rounded-0">Edit</a> |
    <a asp-action="Index" class="btn btn-outline-primary rounded-0">Trở Về Trang Danh Sách Danh Mục</a>
</div>
