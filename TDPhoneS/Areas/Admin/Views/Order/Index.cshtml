@model X.PagedList.IPagedList<TDPhoneS.Models.DataModels.Order>
@using X.PagedList.Mvc.Core;
@{
    ViewData["Title"] = "Danh Sách Đơn Đặt Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var sorts = ViewBag.sorts;
}
<h4>Danh Sách Đơn Đặt Hàng</h4>

<hr />
<form class="row p-2" method="get">
    <div class="col-lg-8 row">
        <select class="form-control col-lg-8 rounded-0 " name="sort">
            <option value="">----- Sắp Xếp Theo -----</option>
            <option value="Id-ASC" selected="@(sorts == "Id-ASC")">Sắp Xếp Theo Id (A - Z)</option>
            <option value="Id-DESC" selected="@(sorts == "Id-DESC")">Sắp Xếp Theo Id (Z - A)</option>
            <option value="Created_Date-ASC" selected="@(sorts == "Created_Date-ASC")">Sắp Xếp Theo Ngày Tạo (A - Z)</option>
            <option value="Created_Date-DESC" selected="@(sorts == "Created_Date-DESC")">Sắp Xếp Theo Ngày Tạo (Z - A)</option>
            <option value="Status-ASC" selected="@(sorts == "Status-ASC")">Sắp Xếp Theo Trạng Thái (A - Z)</option>
            <option value="Status-DESC" selected="@(sorts == "Status-DESC")">Sắp Xếp Theo Trạng Thái (Z - A)</option>
        </select>
        <button class="col-lg-2 btn rounded-0 btn-primary">Tìm</button>
        @if (!string.IsNullOrEmpty(sorts))
        {
            <a asp-area="Admin" asp-controller="Order" asp-action="Index" class="col-lg-2 btn rounded-0 btn-warning">Hủy Tìm</a>
        }
    </div>

    <div class="col-lg-4">
    </div>
</form>
<div class="container-fluid">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên Khách Hàng</th>
                <th>Ngày Đặt Hàng</th>
                <th>Mặt Hàng</th>
                <th>Tổng Tiền</th>
                <th>Trạng Thái</th>
                <th>
                    Chức Năng
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.Id</th>
                    <td>@item.DeliverUser</td>
                    <td>@item.Created_Date</td>
                    <td>@item.OrderDetails?.Count mặt hàng</td>
                    <td>@String.Format("{0:C}", item.TotalPrice)</td>
                    <td>@item.Status</td>
                    <td>
                        <!-- Default dropright button -->
                        <div class="btn-group dropright">
                            <button type="button" class="btn btn-outline-success rounded-0 dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Xử Lý Đơn Đặt Hàng
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-id="@item.Id">Xem Chi Tiết Đơn Đặt Hàng</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Order" asp-action="ApproveOrder" asp-route-id="@item.Id">Phê Duyệt Đơn Đặt Hàng</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Order" asp-action="CancelOrder" asp-route-id="@item.Id">Xoá Đơn Đặt Hàng</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }),
    new X.PagedList.Web.Common.PagedListRenderOptions
    {
    LiElementClasses = new string[] { "page-item" },
    PageClasses = new string[] { "page-link" }
    }
    )

</div>