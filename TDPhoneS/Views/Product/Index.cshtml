@model X.PagedList.IPagedList<TDPhoneS.Models.DataModels.Product>
@using X.PagedList.Mvc.Core;

@{
    ViewData["Title"] = "Shop Page";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var userFound = ViewBag.userFound;
    var names = ViewBag.names;
    var sorts = ViewBag.sorts;

    var categories = ViewBag.categories;
}


<!-- ***** Main Banner Area Start ***** -->
<div class="page-heading" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-content">
                    <h2 
                        data-lang="vi"
                        data-lang-en="Our Products"
                        data-lang-vi="Sản Phẩm Của Chúng Tôi"
                        data-lang-de="Unsere Produkte"
                        data-lang-kr="우리의 제품"
                        data-lang-jp="当社の製品">
                    </h2>
                    <!--<h2>Our Products</h2>-->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Main Banner Area End ***** -->
<!-- ***** Products Area Starts ***** -->
<section class="section container-fluid" id="products">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading" style="max-width: 450px; display: flex; justify-content: left; align-items: flex-start; margin-left: 350px;">
                    <h2 
                        data-lang="vi"
                        data-lang-en="Latest Products"
                        data-lang-vi="Các sản phẩm mới nhất"
                        data-lang-de="Neueste Produkte"
                        data-lang-kr="새 품목"
                        data-lang-jp="最新の製品">
                        </h2>
                    <!--<h2>Our Latest Products</h2>-->
                    <!--<span>Check out all of our products.</span>-->
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="container col-lg-4">
            @if (!string.IsNullOrEmpty(names) || !string.IsNullOrEmpty(sorts))
            {
                <a asp-controller="Product" asp-action="Index" class="btn rounded-0 btn-warning">Hủy Tìm</a>
            }
            <form method="get" id="searchForm">
                <div class="row p-3">
                    <h4 class="pb-2"
                        data-lang="vi"
                        data-lang-en="Search By Product Name"
                        data-lang-vi="Tìm Kiếm Theo Tên Sản Phẩm"
                        data-lang-de="Suche Nach Produktnamen"
                        data-lang-kr="제품명으로 검색"
                        data-lang-jp="製品名から探す">
                </h4>

                    <input id="inputName" class="col-lg-10 form-control rounded-0" value="@names" name="name" placeholder="" />
                    <button class="col-lg-2 btn rounded-0 btn-outline-secondary" type="submit"
                            data-lang="vi"
                            data-lang-en="Search"
                            data-lang-vi="Tìm"
                            data-lang-de="Suchen"
                            data-lang-kr="찾다"
                            data-lang-jp="検索">
                    </button>
                    <button id="recordButton" class="btn rounded-0 btn-outline-secondary" type="button" style="margin-top: 5px;"
                            data-lang="vi"
                            data-lang-en="Record"
                            data-lang-vi="Ghi Âm"
                            data-lang-de="Aufzeichnen"
                            data-lang-kr="기록"
                            data-lang-jp="記録">
                    </button>
                </div>

                <script>
                    const inputName = document.getElementById('inputName');
                    const recordButton = document.getElementById('recordButton');

                    // Kiểm tra xem trình duyệt có hỗ trợ Web Speech API hay không
                    if ('webkitSpeechRecognition' in window) {
                        const recognition = new webkitSpeechRecognition();

                        recognition.onresult = function (event) {
                            const { transcript } = event.results[0][0];
                            inputName.value = transcript;

                            // Tự động submit form khi ghi âm xong
                            document.getElementById('searchForm').submit();
                        };

                        recordButton.addEventListener('click', function () {
                            recognition.start();
                        });
                    } else {
                        console.log('Trình duyệt không hỗ trợ Web Speech API');
                    }
                </script>



                <hr />
                <div class="row p-3">
                    <h4 class="pb-2"
                        data-lang="vi"
                        data-lang-en="Sorting Products"
                        data-lang-vi="Sắp Xếp Sản Phẩm"
                        data-lang-de="Produktarrangements"
                        data-lang-kr="상품 준비"
                        data-lang-jp="商品手配">
                </h4>
                    <select class="form-control rounded-0 col-lg-10" name="sort">
                        <option value="" hidden
                                data-lang="vi"
                                data-lang-en="----- Sorting by -----"
                                data-lang-vi="----- Sắp Xếp Theo -----"
                                data-lang-de="----- Sortiert Nach -----"
                                data-lang-kr="----- 정렬 기준 -----"
                                data-lang-jp="----- 並べ替え -----">
                        </option>
                        <option value="Id-ASC" selected="@(sorts == "Id-ASC")"
                                data-lang="vi"
                                data-lang-en="Sorting by ID (A - Z)"
                                data-lang-vi="Sắp Xếp Theo ID (A - Z)"
                                data-lang-de="Sortieren nach ID (A - Z)"
                                data-lang-kr="ID별 정렬(A - Z)"
                                data-lang-jp="ID (A - Z) で並べ替え">
                        </option>
                        <option value="Id-DESC" selected="@(sorts == "Id-DESC")"
                                data-lang="vi"
                                data-lang-en="Sorting by ID (Z - A)"
                                data-lang-vi="Sắp Xếp Theo ID (Z - A)"
                                data-lang-de="Sortieren nach ID (Z - A)"
                                data-lang-kr="ID별 정렬(Z - A)"
                                data-lang-jp="ID (Z - A) で並べ替え">
                        </option>
                        <option value="Name-ASC" selected="@(sorts == "Name-ASC")"
                                data-lang="vi"
                                data-lang-en="Sorting by Name (A - Z)"
                                data-lang-vi="Sắp Xếp Theo Tên (A - Z)"
                                data-lang-de="Sortieren nach Name (A - Z)"
                                data-lang-kr="이름별 정렬(A - Z)"
                                data-lang-jp="名前順 (A - Z) で並べ替え">
                    </option>
                        <option value="Name-DESC" selected="@(sorts == "Name-DESC")"
                                data-lang="vi"
                                data-lang-en="Sorting by Name (Z - A)"
                                data-lang-vi="Sắp Xếp Theo Tên (Z  - A)"
                                data-lang-de="Sortieren nach Name (Z - A)"
                                data-lang-kr="이름별 정렬(Z - A)"
                                data-lang-jp="名前順 (Z - A) で並べ替え">
                        </option>
                        <option value="CreatedDate-ASC" selected="@(sorts == "CreatedDate-ASC")"
                                data-lang="vi"
                                data-lang-en="Sorting by Date Created (A - Z)"
                                data-lang-vi="Sắp Xếp Theo Ngày Tạo (A - Z)"
                                data-lang-de="Sortieren nach Erstellungsdatum (A - Z)"
                                data-lang-kr="생성 날짜별 정렬(A - Z)"
                                data-lang-jp="作成日順に並べ替え (A - Z)">
                        </option>
                        <option value="CreatedDate-DESC" selected="@(sorts == "CreatedDate-DESC")"
                                data-lang="vi"
                                data-lang-en="Sorting by Date Created (Z - A)"
                                data-lang-vi="Sắp Xếp Theo Ngày Tạo (Z - A)"
                                data-lang-de="Sortieren nach Erstellungsdatum (Z - A)"
                                data-lang-kr="생성 날짜별 정렬(Z - A)"
                                data-lang-jp="作成日順に並べ替え (Z - A)">
                        </option>
                        <option value="UpdatedDate-ASC" selected="@(sorts == "UpdatedDate-ASC")"
                                data-lang="vi"
                                data-lang-en="Sorting by Date Updated (A - Z)"
                                data-lang-vi="Sắp Xếp Theo Ngày Cập Nhật (A - Z)"
                                data-lang-de="Sortieren nach Aktualisierungsdatum (A – Z)"
                                data-lang-kr="업데이트 날짜별 정렬(A - Z)"
                                data-lang-jp="更新日順に並べ替え (A - Z)">
                        </option>
                        <option value="UpdatedDate-DESC" selected="@(sorts == "UpdatedDate-DESC")"
                                data-lang="vi"
                                data-lang-en="Sorting by Date Updated (Z - A)"
                                data-lang-vi="Sắp Xếp Theo Ngày Cập Nhật (Z - A)"
                                data-lang-de="Sortieren nach Aktualisierungsdatum (Z - A)"
                                data-lang-kr="업데이트 날짜별 정렬(Z - A)"
                                data-lang-jp="更新日順に並べ替え (Z - A)">
                    </option>
                    </select>
                    <button type="submit" class="btn rounded-0 col-lg-2 btn-outline-secondary"
                            data-lang="vi"
                            data-lang-en="Search"
                            data-lang-vi="Tìm"
                            data-lang-de="Suchen"
                            data-lang-kr="찾다"
                            data-lang-jp="検索">
                        </button>
                </div>

            </form>
            <hr />
            <div class="sections_category">
                <h4 class="pb-2"
                    data-lang="vi"
                    data-lang-en="Category"
                    data-lang-vi="Danh Mục"
                    data-lang-de="Kategorie"
                    data-lang-kr="범주"
                    data-lang-jp="分類">
                </h4>
                <ul class="list-group rounded-0">
                    @foreach (var item in categories)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a asp-controller="Product" asp-action="Index" asp-route-cateId="@item.Id" class="text-secondary">
                                @item.Name
                            </a>
                            <span class="badge badge-secodary badge-pill"> @item.Products.Count</span>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <div class="container col-lg-8">
            <div class="row">
                @if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <div class="col-lg-4">
                            <div class="item">
                                <div class="thumb">
                                    <div class="hover-content">
                                        <ul>
                                            <li><a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-eye"></i></a></li>

                                        </ul>
                                    </div>
                                    <img src="~/Uploads/product/@item.Image" alt="">
                                </div>
                                <div class="down-content">
                                    <h4>@item.Name</h4>
                                    @if (item.SalePrice > 0)
                                    {
                                        <span>$ @item.SalePrice - <del>$ @item.Price</del></span>
                                    }
                                    else
                                    {
                                        <span>$ @item.Price </span>
                                    }
                                    <ul class="stars">
                                        @if (userFound != null)
                                        {
                                            <li>
                                                <form asp-controller="Cart" asp-action="AddToCart">
                                                    <input type="hidden" name="accId" value="@userFound.Id" />
                                                    <input type="hidden" name="prodId" value="@item.Id" />

                                                    <input type="hidden" name="quantity" value="1">
                                                    <button type="submit" class="fa fa-shopping-cart btn btn-outline-secondary rounded-0" title="Add To Cart">
                                                    </button>
                                                </form>
                                                @* <a asp-controller="Cart"
                                    asp-action="AddToCart"
                                    asp-route-accId="@User?.Claims?.Take(0)?.FirstOrDefault()?.Value"
                                    asp-route-prodId="@item.Id"></a> *@
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="container">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }),
                            new X.PagedList.Web.Common.PagedListRenderOptions
                            {
                                LiElementClasses = new string[] { "page-item" },
                                PageClasses = new string[] { "page-link",  "rounded-0" }
                            }
                        )
                    </div>
                }
                else
                {
                    <p>Nothing to show here</p>
                }

            </div>
        </div>
    </div>

</section>
<script src="~/js/language.js"></script>
<!-- ***** Products Area Ends ***** -->
