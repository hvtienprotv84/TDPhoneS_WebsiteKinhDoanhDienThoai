@model TDPhoneS.Models.DataModels.Contact;
@{
    ViewData["Title"] = "Contact Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ***** Main Banner Area Start ***** -->
<div class="page-heading about-page-heading" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-content">
                    <h2 
                        data-lang="vi"
                        data-lang-en="Contact Us"
                        data-lang-vi="Liên Hệ Với Chúng Tôi"
                        data-lang-de="Kontaktiere uns"
                        data-lang-kr="문의하기"
                        data-lang-jp="お問い合わせ">
                    </h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Main Banner Area End ***** -->
<!-- ***** Contact Area Starts ***** -->
<div class="contact-us">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div id="map">
                    @* <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1944.1345012590536!2d105.87595162251647!3d21.055914884327635!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135a980bf47b05f%3A0xb71a8a0c419880fd!2zTmfDtSA2NCBHaWEgUXXhuqV0LCBHaWEgUXXhuqV0LCBUaMaw4bujbmcgVGhhbmgsIExvbmcgQmnDqm4sIEjDoCBO4buZaSwgVmlldG5hbQ!5e0!3m2!1sen!2s!4v1700020828265!5m2!1sen!2s" width="100%" height="400px" frameborder="0" style="border:0" allowfullscreen></iframe> *@
                    <!-- You can simply copy and paste "Embed a map" code from Google Maps for any location. -->

                    <img class="card-img" id="img_contact" src="./assets/images/logo_tdphones.png"/>
                    <h1 style="font-size: 100px;margin-left: 30px; color: red;">TDPhoneS</h1>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="section-heading" style="font-family: cursive">
                    <h3 style="font-size: 35px;"
                        data-lang="vi"
                        data-lang-en="We Are Pleased To Receive Feedback From Our Customers!"
                        data-lang-vi="Rất Hân Hạnh Nhận Được Feedback Từ Quý Khách Hàng!"
                        data-lang-de="Wir freuen uns über das Feedback unserer Kunden!"
                        data-lang-kr="우리는 고객으로부터 피드백을 받게 되어 기쁘게 생각합니다!"
                        data-lang-jp="お客様からのフィードバックをお待ちしております。">
                </h3>
                </div>
                <form id="contact" asp-controller="Contact" asp-action="PostContact" method="post">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="row">
                        <div class="col-lg-6">
                            <fieldset>
                                <p 
                                   data-lang="vi"
                                   data-lang-en="Your Name"
                                   data-lang-vi="Tên Của Bạn"
                                   data-lang-de="Ihr Name"
                                   data-lang-kr="당신의 이름"
                                   data-lang-jp="あなたの名前">
                                </p>
                                <input asp-for="Name"  type="text" id="name" placeholder="">
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <p 
                                   data-lang="vi"
                                   data-lang-en="Your Email"
                                   data-lang-vi="Email Của Bạn"
                                   data-lang-de="Deine E-Mail"
                                   data-lang-kr="귀하의 이메일"
                                   data-lang-jp="あなたの電子メール">
                                </p>
                                <input asp-for="Email" type="text" id="email" placeholder="">
                            </fieldset>
                        </div>
                        <div class="col-lg-12" style="margin-top: 30px;">
                            <fieldset>
                                <p 
                                   data-lang="vi"
                                   data-lang-en="The Content Of Your Message"
                                   data-lang-vi="Nội Dung Tin Nhắn Của Bạn"
                                   data-lang-de="Der Inhalt Ihrer Nachricht"
                                   data-lang-kr="메시지 내용"
                                   data-lang-jp="メッセージの内容">
                                </p>
                                <textarea asp-for="Messsage" rows="6" id="message" placeholder="" style="margin-top: 0px;"></textarea>
                            </fieldset>
                        </div>
                        <div class="col-lg-12">
                            
                                <button type="submit" id="form-submit" class="main-dark-button"><i class="fa fa-paper-plane"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.5312482620834!2d106.66936437457487!3d10.770563659302805!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752edeb5d975d5%3A0xbe14034c6e532dc8!2sCellphoneS!5e0!3m2!1svi!2s!4v1719220633085!5m2!1svi!2s" width="1515" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
<!-- ***** Contact Area Ends ***** -->
<script src="~/js/language.js"></script>
<style>
    #img_contact{
        animation: logoAnimation 2s infinite;
    }

    @@keyframes logoAnimation {
  0% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20px); /* Điều chỉnh khoảng cách lên xuống tùy ý */
  }
  100% {
    transform: translateY(0);
  }
}
</style>